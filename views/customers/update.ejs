
<% include ../header %>
<!-- Customer edit -->

        <div class="container">
          <% include ../errors %>
          <div class="row">
            <div class="col-md-8 m-auto">
              <h1 class="display-4 text-center">Customer</h1>
              <p class="lead text-center">Edit Customer</p>
              <form method="POST" action="/customers/update">
                <div class="form-group">
                  <input type="email" value="<%=customer.email%>" class="form-control form-control-lg" placeholder="Customer Email" name="email" />
                </div>
                <div class="form-group">
                  <input type="text" value="<%=customer.name%>" class="form-control form-control-lg" placeholder="Customer Full Name" name="name" />
                </div>
                <div class="form-group">
                  <input type="text" value="<%=customer.address%>" class="form-control form-control-lg" placeholder="Customer Address" name="address" />
                </div>
                <input type="submit" class="btn btn-info btn-block mt-4" />
              </form>
            </div>
          </div>
        

         

        </div>

    
      <% include ../footer %>
      <% include ../bottom %>